{
  "compilerOptions": {
    // Target modern JS
    "target": "ES2020",
    // Use latest ECMAScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // Only allow TypeScript files (set to true if you still have JS files)
    "allowJs": false,
    // Skip type checking of declaration files for faster builds
    "skipLibCheck": true,
    // Enable all strict type-checking options
    "strict": true,
    // Do not emit output files (Next.js handles this)
    "noEmit": true,
    // Enable incremental compilation for faster builds
    "incremental": true,
    // Use modern module system for best compatibility
    "module": "esnext",
    // Use bundler-style module resolution (recommended for Next.js 14+)
    "moduleResolution": "bundler",
    // Allow default imports from modules with no default export
    "esModuleInterop": true,
    // Allow synthetic default imports (improves compatibility)
    "allowSyntheticDefaultImports": true,
    // Allow importing JSON files
    "resolveJsonModule": true,
    // Required for Next.js and other tools that transpile files individually
    "isolatedModules": true,
    // Required for Next.js
    "jsx": "preserve",
    // Ensure consistent file name casing across OSes
    "forceConsistentCasingInFileNames": true,
    // Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Path aliasing
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
